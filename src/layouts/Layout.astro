---
import "../styles/global.css";
import "@fortawesome/fontawesome-free/css/all.min.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title?: string;
	description?: string;
}

const {
	title = "beta.serv.lat | Astro starter",
	description = "Plantilla base con Astro, Tailwind y componentes reutilizables.",
} = Astro.props as Props;
---

<!doctype html>
<html lang="es" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-zinc-950 text-white/50 antialiased">
		<div
			aria-hidden="true"
			class="pointer-events-none fixed inset-0 -z-10 bg-[radial-gradient(circle_at_top,_rgba(255,255,255,0.12),_transparent_52%),radial-gradient(circle_at_bottom,_rgba(0,0,255,0.2),_transparent_80%)]"
		></div>
		<div
			class="mx-auto flex min-h-screen w-full max-w-6xl flex-col px-4 py-6 sm:px-6 lg:px-8"
		>
			<Header title={title} />
			<main
				class="mt-5 flex flex-1 items-start justify-center rounded-3xl border border-white/10 bg-white/5 p-5 shadow-sm backdrop-blur sm:p-8"
			>
				<slot />
			</main>
			<Footer />
		</div>
	</body>
</html>
