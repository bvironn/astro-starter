---
interface Props {
    title?: string;
}

const { title = "beta.serv.lat" } = Astro.props as Props;
const headerTitle = title.split("|")[0].trim() || title;
import Button from "./Button.astro";
---

<header class="grid grid-cols-[1fr_auto_1fr] items-center gap-2 rounded-3xl border border-white/10 bg-white/5 p-4 shadow-sm backdrop-blur">
    <Button href="/" variant="secondary" size="sm" icon="fa-solid fa-house" class="justify-self-start">
        Inicio
    </Button>

    <a href="/" class="truncate px-2 text-center text-sm font-semibold text-gray-100 sm:text-base hover:underline underline-offset-4 focus-visible:underline">{headerTitle}</a>

    <nav class="justify-self-end flex items-center gap-2 text-sm">
        <Button href="/about" variant="secondary" size="sm" icon="fa-solid fa-user">
            Acerca de
        </Button>
        <Button href="/contact" variant="primary" size="sm" icon="fa-solid fa-envelope">
            Contacto
        </Button>
    </nav>
</header>
