---
interface Props {
	title: string;
	description: string;
	icon?: string;
	class?: string;
}

const {
	title,
	description,
	icon = "fa-regular fa-square",
	class: className = "",
} = Astro.props as Props;

const classes = `h-auto w-full rounded-2xl border border-white/10 bg-white/5 p-4 shadow-sm transition hover:bg-white/8 ${className}`;
---

<article class={classes}>
	<div class="flex items-start gap-3">
		<i aria-hidden="true" class:list={[...icon.split(" "), "mt-0.5 text-sm text-gray-300"]}></i>
		<div class="min-w-0">
			<h3 class="text-sm font-semibold text-gray-200 sm:text-base">{title}</h3>
			<p class="mt-1 text-sm leading-relaxed text-gray-400">{description}</p>
		</div>
	</div>
</article>
